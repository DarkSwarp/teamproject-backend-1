            "example": "Bob Smith"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "pattern": "^\\w+([\\.-]?\\w+)*@\\w+([\\.-]?\\w+)*(\\.\\w{2,3})+$",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "minLength": 7,
            "example": "qwertonity"
          }
        }
